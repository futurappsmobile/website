---
import { getLegalContent, getAppStoreLink } from "../i18n/utils";

interface Props {
  currentLang?: string;
}

const { currentLang = "en" } = Astro.props;
const content = await getLegalContent(currentLang);
const { footer } = content;

const base = import.meta.env.BASE_URL;
const basePath = base.endsWith("/") ? base : `${base}/`;
const currentYear = new Date().getFullYear();

// Helper to construct localized links
const getLink = (path: string) => {
  // If path is empty, it's home
  if (!path) return `${basePath}${currentLang}/`;
  return `${basePath}${currentLang}/${path}`;
};
---

<footer class="bg-gray-900 text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-bold mb-4">{footer.brand}</h3>
        <p class="text-gray-400">
          {footer.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">{footer.quickLinks}</h3>
        <ul class="space-y-2">
          <li>
            <a
              href={getLink("")}
              class="text-gray-400 hover:text-white transition-colors"
              >{footer.links.home}</a
            >
          </li>
          <li>
            <a
              href={getLink("faq")}
              class="text-gray-400 hover:text-white transition-colors"
              >{footer.links.faq}</a
            >
          </li>
          <li>
            <a
              href={getLink("support")}
              class="text-gray-400 hover:text-white transition-colors"
              >{footer.links.support}</a
            >
          </li>
          <li>
            <a
              href={getLink("privacy")}
              class="text-gray-400 hover:text-white transition-colors"
              >{footer.links.privacy}</a
            >
          </li>
          <li>
            <a
              href={getLink("terms")}
              class="text-gray-400 hover:text-white transition-colors"
              >{footer.links.terms}</a
            >
          </li>
        </ul>
      </div>

      <!-- Download Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">{footer.download}</h3>
        <div class="flex flex-col space-y-3">
          <a
            href={getAppStoreLink(currentLang)}
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
              ></path>
            </svg>
            App Store
          </a>
          <a
            href="#"
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-gray-900 rounded-lg hover:bg-gray-100 transition-colors"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M3.609 1.814L13.792 12 3.609 22.186a.996.996 0 0 1-.609-.92V2.734a1 1 0 0 1 .609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 0 1 0 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.802 8.99l-2.303 2.303-8.635-8.635z"
              ></path>
            </svg>
            Google Play
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} {footer.copyright}</p>
    </div>
  </div>
</footer>
