---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { supportedLanguages } from "../../i18n/languages";
import { getLegalContent } from "../../i18n/utils";

export async function getStaticPaths() {
    return supportedLanguages.map((lang) => ({
        params: { lang: lang.code },
    }));
}

const { lang } = Astro.params;
const content = await getLegalContent(lang);
const { support } = content;

// Helper to construct paths
const basePath = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;

const faqLink = `${basePath}${lang}/faq`;
---

<Layout
    title={`${support.title} - SnapFuel`}
    description="Get help with SnapFuel. Contact our support team, browse help resources, and find answers to your questions."
    lang={lang}
>
    <Header currentLang={lang} />

    <main class="py-16 bg-gray-50">
        <div class="container mx-auto px-4 max-w-6xl">
            <!-- Header -->
            <div class="text-center mb-12">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
                    {support.title}
                </h1>
                <p class="text-xl text-gray-600">
                    {support.subtitle}
                </p>
            </div>

            <!-- Quick Help Cards Removed as per user request -->

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Contact Form -->
                <div class="bg-white rounded-xl p-8 shadow-sm">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">
                        {support.form.title}
                    </h2>
                    <form class="space-y-6" id="support-form">
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                {support.form.name} *
                            </label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                                placeholder={support.form.name}
                            />
                        </div>

                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                {support.form.email} *
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                                placeholder="your.email@example.com"
                            />
                        </div>

                        <div>
                            <label
                                for="category"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                {support.form.category} *
                            </label>
                            <select
                                id="category"
                                name="category"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                            >
                                <option value="">{support.form.category}</option
                                >
                                <option value="technical"
                                    >{support.form.categories.technical}</option
                                >
                                <option value="billing"
                                    >{support.form.categories.billing}</option
                                >
                                <option value="feature"
                                    >{support.form.categories.feature}</option
                                >
                                <option value="account"
                                    >{support.form.categories.account}</option
                                >
                                <option value="feedback"
                                    >{support.form.categories.feedback}</option
                                >
                                <option value="other"
                                    >{support.form.categories.other}</option
                                >
                            </select>
                        </div>

                        <div>
                            <label
                                for="subject"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                {support.form.subject} *
                            </label>
                            <input
                                type="text"
                                id="subject"
                                name="subject"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
                                placeholder={support.form.subject}
                            />
                        </div>

                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                {support.form.message} *
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                rows="5"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all resize-none"
                                placeholder="..."></textarea>
                        </div>

                        <button
                            type="submit"
                            class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                        >
                            {support.form.submit}
                        </button>
                    </form>
                </div>

                <!-- Contact Information & Resources -->
                <div class="space-y-8">
                    <!-- Contact Info -->
                    <div class="bg-white rounded-xl p-8 shadow-sm">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">
                            {support.contactInfo.title}
                        </h2>
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <div
                                    class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0"
                                >
                                    <svg
                                        class="w-5 h-5 text-blue-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="font-semibold text-gray-900">
                                        {support.contactInfo.emailTitle}
                                    </h3>
                                    <p class="text-gray-600">
                                        <a
                                            href="mailto:futurappsmobile@gmail.com"
                                            class="text-blue-600 hover:text-blue-700 underline"
                                        >
                                            futurappsmobile@gmail.com
                                        </a>
                                    </p>
                                    <p class="text-sm text-gray-500 mt-1">
                                        {support.contactInfo.response}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Common Issues -->
                    <div
                        class="bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl p-8 text-white shadow-sm"
                    >
                        <h2 class="text-2xl font-bold mb-4">
                            {support.commonIssues.title}
                        </h2>
                        <p class="mb-4 text-blue-100">
                            {support.commonIssues.subtitle}
                        </p>
                        <ul class="space-y-2 text-blue-50">
                            {
                                support.commonIssues.list.map((issue) => (
                                    <li class="flex items-start">
                                        <svg
                                            class="w-5 h-5 mr-2 flex-shrink-0 mt-0.5"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        <span>{issue}</span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <Footer currentLang={lang} />
</Layout>

<script>
    const form = document.getElementById("support-form") as HTMLFormElement;

    form?.addEventListener("submit", (e) => {
        e.preventDefault();
        // In a real implementation, this would send data to your backend
        alert(
            "Thank you for your message! Our support team will get back to you within 24 hours.",
        );
        form.reset();
    });
</script>
